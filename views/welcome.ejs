<script>
    $(document).ready( function() {
        let maxLength = 250;
        $('.blog-body').children('p').each( function() {
            let message = $(this).text();
            if(message.length > maxLength) {
                message = message.substr(0, maxLength) + '...';
            }
            $(this).text(message);
        })
    });
</script>